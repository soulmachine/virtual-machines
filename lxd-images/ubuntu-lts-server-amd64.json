{
  "builders": [{
    "type": "lxd",
    "name": "ubuntu-lts-server-amd64",
    "image": "ubuntu:jammy",
    "output_image": "ubuntu-lts-server-amd64",
    "publish_properties": {
      "description": "LXD Ubuntu base image with Packer"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "script": "./scripts/dist-upgrade-step-1.sh"
  }, {
    "type": "shell",
    "script": "./scripts/dist-upgrade-step-2.sh",
    "pause_before": "3s"
  }, {
    "type": "shell",
    "script": "./scripts/commons.sh",
    "pause_before": "3s"
  }, {
    "type": "shell",
    "script": "./scripts/cleanup.sh",
    "pause_before": "3s"
  }]
}
